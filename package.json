{
  "name": "whopper",
  "version": "0.1.0",
  "description": "Whopper is a CLI tool that discovers and detects web technologies used on websites.",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "node --enable-source-maps ./dist/main.js",
    "start": "npm run build && node ./dist/main.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage"
  },
  "bin": {
    "whopper": "./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0n1shi/whopper.git"
  },
  "keywords": [],
  "author": "",
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/0n1shi/whopper/issues"
  },
  "homepage": "https://github.com/0n1shi/whopper#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ora": "^9.0.0",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  }
}
